{
  "name": "product-digest",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "postinstall": "node scripts/patch-next-bfcache.mjs",
    "dev": "next dev",
    "build": "npm run build:local",
    "build:local": "npm run check:runtime && npm run prebuild && next build --no-lint",
    "build:ci": "npm run clean:next && DOCTOR_STRICT=1 npm run doctor && npm run prebuild && next build",
    "build:debug": "mkdir -p logs && npm run check:runtime && npm run prebuild && NEXT_TELEMETRY_DISABLED=1 next build --debug 2>&1 | tee logs/build-debug.log",
    "start": "next start",
    "lint": "next lint",
    "check:runtime": "node scripts/check-runtime.mjs",
    "check:types": "tsc --noEmit",
    "check:types:debug": "node scripts/check-types-debug.mjs",
    "check:lint": "next lint",
    "check:content": "node scripts/check-content.mjs",
    "check:all": "npm run check:runtime && npm run check:types && npm run check:content && npm run check:lint",
    "clean:next": "node scripts/clean-next.mjs",
    "kill:next": "node scripts/kill-next.mjs",
    "doctor": "node scripts/doctor.mjs",
    "prebuild": "node scripts/generate-search-index.mjs",
    "cf:build": "npx @opennextjs/cloudflare build",
    "cf:deploy": "npx @opennextjs/cloudflare deploy",
    "cf:noop": "echo \"Cloudflare Pages deploy handled by platform\"",
    "backend:start": "node backend/subscribe-server.mjs",
    "new:post": "node scripts/new-post.mjs",
    "new:post:db": "node scripts/new-post-db.mjs",
    "migrate:posts:db": "node scripts/migrate-content-posts-to-db.mjs",
    "new:book:db": "node scripts/new-book-db.mjs",
    "new:event:db": "node scripts/new-event-db.mjs",
    "seed:events:db": "node scripts/seed-events-db.mjs",
    "publish:next-draft": "node scripts/publish-next-draft.mjs",
    "publish:next-draft:push": "node scripts/publish-next-draft-push.mjs",
    "schedule:sync": "node scripts/sync-scheduled-posts-from-content.mjs",
    "publish:scheduled": "node scripts/publish-scheduled-posts.mjs",
    "publish:scheduled:push": "node scripts/publish-scheduled-posts-push.mjs",
    "check:api": "node scripts/check-api.mjs",
    "seed:likes:past": "node scripts/seed-random-likes-past-posts.mjs",
    "seed:likes:missing": "node scripts/seed-missing-likes.mjs"
  },
  "dependencies": {
    "@fontsource/source-sans-3": "^5.2.9",
    "@fontsource/spectral": "^5.2.8",
    "@infinitewatch/next": "^1.0.1",
    "gray-matter": "^4.0.3",
    "next": "15.5.12",
    "pg": "^8.18.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "reading-time": "^1.5.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "^1.16.5",
    "@types/node": "^22.10.6",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "typescript": "^5.7.3"
  }
}
